<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mt-4 mb-4">
        <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
      </h2>
    </div>
    
    <div class="col-10">
      <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
        <table class="table table-borderless">
          <tr>
            <div class="form-group">
              <td class="pt-0"><%= f.label :id, "会員ID", class: "col-form-label" %></td>
              <td class="pt-0 pl-0"><%= f.text_field :id, class: "form-control-plaintext", disabled: "true" %></td>
            </div>
          </tr>
          
          <tr>
            <div class="form-group">
              <td class="pt-0"><%= f.label :last_name, "氏名", class: "col-form-label" %></td>
              <td class="row pt-0">
                <%= f.text_field :last_name, class: "col-5 mr-3 form-control" %>
                <%= f.text_field :first_name, class: "col-5 form-control" %>
              </td>
            </div>
          </tr>
          
          <tr>
            <div class="form-group">
              <td class="pt-0"><%= f.label :last_name_kana, "フリガナ", class: "col-form-label" %></td>
              <td class="row pt-0">
                <%= f.text_field :last_name_kana, class: "col-5 mr-3 form-control" %>
                <%= f.text_field :first_name_kana, class: "col-5 form-control" %>
              </td>
            </div>
          </tr>
          
          <tr>
            <div class="form-group">
              <td class="pt-0"><%= f.label :post_code, "郵便番号", class: "col-form-label" %></td>
              <td class="pt-0 row"><%= f.text_field :post_code, class: "col-5 form-control" %></td>
            </div>
          </tr>
          
          <tr>
            <div class="form-group">
              <td class="pt-0"><%= f.label :address, "住所", class: "col-form-label" %></td>
              <td class="pt-0 row"><%= f.text_field :address, class: "form-control" %></td>
            </div>
          </tr>
          
          <tr>
            <div class="form-group">
              <td class="pt-0"><%= f.label :phone_number, "電話番号", class: "col-form-label" %></td>
              <td class="pt-0 row"><%= f.text_field :phone_number, class: "col-5 form-control" %></td>
            </div>
          </tr>
          
          <tr>
            <div class="form-group">
              <td class="pt-0"><%= f.label :email, "メールアドレス", class: "col-form-label" %></td>
              <td class="pt-0 row"><%= f.email_field :email, class: "col-5 form-control" %></td>
            </div>
          </tr>
          
          <tr>
            <div class="form-group">
              <td class="pt-0"><%= f.label "会員ステータス", class: "col-form-label" %></td>
              <td class="row pt-0">
                  <%= f.radio_button :is_delete, false %>
                  <%= f.label :is_delete, "有効", value: false, class: "ml-2 mr-4 col-form-label" %>
                  <%= f.radio_button :is_delete, true %>
                  <%= f.label :is_delete, "退会", value: true, class: "ml-2 col-form-label" %>
              </td>
            </div>
          </tr>
          
          <tr>
            <td></td>
            <td>
              <div class="form-group row">
                <%= f.submit "変更を保存", method: :patch, class: "mt-3 px-4 btn btn-success" %>
              </div>
            </td>
          </tr>
          
        </table>
      <% end %>
    </div>
  </div>
</div>