<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <div class="mb-4"></div>
      <h2>商品編集</h2>
    </div>
  </div>
  
   <div class="row">  
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
      <table>
      <tr>
        <div class="form-group">
          <th><%= f.label :商品画像 %></th>
          <td><%= f.file_field :image, accept: 'image/*' %></td>
        </div>
      </tr>
      
      <tr>
        <div class="form-group">
          <th><%= f.label :商品名 %></th>
          <td><%= f.text_field :name, placeholder:"商品名" %></td>
        </div>
      </tr>
      
      <tr>
        <div class="form-group">
          <th><%= f.label :商品説明 %></th>
          <td><%= f.text_area :explanation, size: "50x2", placeholder:"ここに説明文を記述します" %></td>
        </div>
      </tr>
      
      <tr>
        <div class="form-group">
          <th><%= f.label :ジャンル %></th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.label :税抜価格 %></th>
          <td><%= f.text_field :tax_excluded_price, placeholder:"1000" %>円</td>
        </div>
      </tr>
      
      <tr>
        <div class="form-group">
          <th><%= f.label :販売ステータス %></th>
          <td><%= f.radio_button :is_sold_out, true, checked: true %>
          <%= f.label :is_sold_out, "販売中" %>
          <%= f.radio_button :is_sold_out, false %>
          <%= f.label :is_sold_out, "販売中止" %></td>
        </div>
      </tr>
      
      <tr>
        <div class="form-action">
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </div>
      </tr>
      </table>
      <% end %>
    </div>
  </div>
  
</div>