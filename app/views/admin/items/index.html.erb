<div class="container py-5">
<h3>商品一覧</h3>
  <div class="row justify-content-end mb-3">
    <div class="col-2">
      <%= link_to '+', new_admin_item_path, class: "title-background btn rounded-circle border-right border-bottom shadow btn-dark" %>
    </div>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id), class: "text-reset" %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_on_sale %>
              <p class="text-success"><strong>販売中</strong></p>
            <% elsif %>
              <p class="text-muted"><strong>販売停止中</strong></p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row justify-content-center">
    <%= paginate @items %>
  </div>
</div>