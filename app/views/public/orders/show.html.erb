<div class="container p-3">
  <div class="row">

    <div class="col-md-12 mb-3 mt-3">
      <h3>注文履歴詳細</h3>
    </div>

    <div class="col-md-6">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tr>
          <td class="table-secondary">注文日</td>
          <td><%#= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>

        <tr>
          <td class="table-secondary">配送先</td>
          <td>〒<%#= @order.postcode + "　" + @order.address + "　" + @order.name %></td>
        </tr>

        <tr>
          <td class="table-secondary">支払方法</td>
          <td><%#= @order.pay_method_i18n %></td>
        </tr>

        <tr>
          <td class="table-secondary">ステータス</td>
          <td><%#= @order.status_i18n %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-5 offset-md-1">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <td class="table-secondary">商品合計</td>
          <td><%#= (@order.total_price - @order.postage_fee).to_s(:delimited) %></td>
        </tr>

        <tr>
          <td class="table-secondary">配送料</td>
          <td><%#= @order.postage_fee.to_s(:delimited) %></td>
        </tr>

        <tr>
          <th class="table-secondary">ご請求額</th>
          <td><%#= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-8 mb-3">
      <h4>注文内容</h4>

      <table class="table table-bordered">
        <tr class="table-secondary">
          <td>商品</td>
          <td>単価（税込）</td>
          <td>個数</td>
          <td>小計</td>
        </tr>

        <%# @order_details.each do |order_detail| %>
          <tr>
            <td><%#= order_detail.item.name %></td>
            <td><%#= order_detail.item.price.to_s(:delimited) %></td>
            <td><%#= order_detail.amount %></td>
            <td><%#= (order_detail.amount * order_detail.price).to_s(:delimited) %></td>
          </tr>
        <%# end %>

      </table>

    </div>
  </div>
</div>