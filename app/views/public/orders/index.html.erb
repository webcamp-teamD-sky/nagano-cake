<div class="container p-3">
  <div class="row">

    <div class="col-md-12">
      <h3>注文履歴一覧</h3>

        <table class="table table-bordered">
              <div class="col-md-12">
          <% if @orders.present? %>


            <tr class="table-secondary">
              <td>注文日</td>
              <td>配送先</td>
              <td>注文商品</td>
              <td>支払金額</td>
              <td>ステータス</td>
              <td>注文詳細</td>
            </tr>


            <% @orders.each do |order| %>

              <tbody>

                <tr>
                  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                  <td><%= order.name %></td>
                  <td><%= order.postcode %></td>
                  <td><%= order.address %></td>
                </tr>

                <tr>
                  <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %>
                  <% end %>
                  <td><%= "#{order.price.to_s(:delimited)}" %></td>
                  <td><%= order_status_i18n %></td>
                  <td><%= link_to "表示する", order_path(order.id), class: "btn btn-info" %></td>
                </tr>

              </tbody>

            <% end %>

        <% else %>
          <p>注文がありません。</p>
        <% end %>

      </table>

    </div>
  </div>
</div>