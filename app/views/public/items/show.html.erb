<%#= render 'public/items/genre' %>
<div>
  <%= image_tag @item.image %>
  <%= @item.name %>
  <%= @item.explanation %>
  ¥<%= @item.price %>(税込）
  <%= form_with model: @item do |f| %>
    <%= f.select :quantity, 1..10 %>
  <% end %>
  <%= link_to 'カートに入れる', cart_items_path, class:"btn btn-primary" %>
</div>