<div class="container my-5">
  <div class="row">
    <div class="col">
      
      <div class="col-6 offset-3">
        <h3>ログイン</h3>
        <p>会員の方はこちらからログイン</p>

        <%= form_with model: @customer, url: customer_session_path do |f| %>
          <div class="field my-2">
            <%= f.label :"メールアドレス",class:"form-label mt-3"%>
            <%= f.email_field :email, autofocus: true,placeholder:"sample@example.com", autocomplete: "email",class:"form-control" %>
          </div>

          <div class="field my-2">
            <%= f.label :"パスワード",class:"form-label mt-3" %>
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
          </div>

          <div class="actions my-2 text-center">
            <%= f.submit "ログイン", class:"btn btn-primary mt-3" %>
          </div>
        <% end %>
        
        <h3>会員登録がお済みでない方</h3>
        <%= render "public/shared/links" %>
      </div>
      
    </div>
  </div>
</div>


