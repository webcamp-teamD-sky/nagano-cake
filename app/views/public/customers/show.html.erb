<h2>マイページ</h2>
<h2>登録情報</h2>
<%= link_to '編集する', edit_customer_registration_path, class:"btn btn-success" %>

<table>
    <tr>
        <th>氏名</th>
        <td><%= @customer.full_name %></td>
    </tr>
    <tr>
        <th>カナ</th>
        <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
</table>


<h2>配送先</h2>
<%= link_to '一覧を見る', '/addresses', class:"btn btn-primary" %>

