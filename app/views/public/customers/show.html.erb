<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>マイページ</h2>
        <h4>登録情報</h4>
        <%= link_to '編集する', edit_customer_registration_path, class:"btn btn-success" %>
        <div class="row">
            <div class="col-12 mt-3">
                <table class="table table-bordered">
                    <tr>
                        <th>氏名</th>
                        <td><%= @customer.full_name %></td>
                    </tr>
                    <tr>
                        <th>カナ</th>
                        <td><%= @customer.full_name_kana %></td>
                    </tr>
                    <tr>
                        <th>郵便番号</th>
                        <td><%= @customer.postcode %></td>
                    </tr>
                    <tr>
                        <th>住所</th>
                        <td><%= @customer.address %></td>
                    </tr>
                    <tr>
                        <th>電話番号</th>
                        <td><%= @customer.phone_number %></td>
                    </tr>
                    <tr>
                        <th>メールアドレス</th>
                        <td><%= @customer.email %></td>
                    </tr>
                </table>
            </div>
        </div>


        <h4>配送先</h4>
        <%= link_to '一覧を見る', '/addresses', class:"btn btn-primary" %>

        <h4>注文履歴</h4>
        <%= link_to '一覧を見る', '/orders', class:"btn btn-primary" %><br>
    </div>
  </div>
</div>
