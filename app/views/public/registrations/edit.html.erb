<h2>会員情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :（姓） %>
    <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postcode, autofocus: true, class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_area :address, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>



<div><%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>


