<div class="container p-3">
  <div class="row address-box">
    <div class="col-md-12 address-main-box">
      <h3 class="mb-5 mt-3 address-title">配送先編集</h3>
      <div class="mb-5 address-container">

        <%= form_with model: @address, url: address_path(@address), class: 'address-box',"data-turbolinks": false do |f| %>

          <div class="row mt-3 address-box">
            <div class="col-3 address-label">
              宛名
            </div>
            <div class="col-3 address-from">
              <%= f.text_field :name, class: 'form-control mb-2' %>
            </div>
          </div>

          <div class="row address-box">
            <div class="col-3 address-label">
              郵便番号（ハイフンなし）
            </div>
            <div class="col-3 address-from">
              <%= f.text_field :postcode, class: 'form-control mb-2' %>
            </div>
          </div>

          <div class="row address-box">
            <div class="col-3 address-label">
              住所
            </div>
            <div class="col-6 address-from">
              <%= f.text_field :address, class: 'form-control mb-2' %>
            </div>
          </div>

            <div class="col-4 address-btn address-btn-right">
              <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
            </div>

        <% end %>

      </div>
    </div>
  </div>
</div>