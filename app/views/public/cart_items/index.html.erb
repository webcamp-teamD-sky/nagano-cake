<div class="container my-5">
  <div class="row">
    <div class="col">

      <% if @cart_items.any? %>
      <div class="bg-light col-md-4 address-main-box text-center">
        <h4 class="mt-3">ショッピングカート</h4>
      </div>

      <div class="text-right mb-3">
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:"btn btn-danger" %>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th><small>※変更後ボタンを押してください</small><br>数量
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <% if cart_item.item.image.attached? %>
                <%= image_tag cart_item.item.image, size: "100x100", class: "object-fit-cover mr-3" %>
              <% else %>
                <%= image_tag 'noimage.jpg', size: "100x100", class: "object-fit-cover mr-3" %>
              <% end %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.price.to_s(:delimited) %>
            </td>
            <td>
              <%= form_with model: cart_item do |f| %>
                <%= f.select :amount, 1..10 %>
                <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </table>

      <div class="container">
        <div class="row">

          <div class="col-md-3 mt-3">
            <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
          </div>

          <div class="col-md-4 offset-5 mt-3">
            <table class="table table-bordered">
              <tr>
                <td>合計金額</td>
                <td><%= @total.to_s(:delimited) %></td>
              </tr>
            </table>
          </div>

        </div>
      </div>

      <div class="row justify-content-center mt-5">
        <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success", "data-turbolinks": false %>
      </div>
        <% else %>
          <div class="text-center mt-5">
            <h4>ショッピングカート</h4>
            <p>カート内に商品がありません。</p>
          </div>
        <% end %>
    </div>
  </div>
</div>